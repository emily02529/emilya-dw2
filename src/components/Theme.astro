---
import "@fontsource-variable/dm-sans";
---

<style is:global>
  :root {
    /* 색상 팔레트: 블랙 + 핫핑크 */
    --color-bg: #000000;
    --color-text: #ffffff;
    --color-primary: #ff3eb5;   /* 핫핑크 */
    --color-secondary: #ff66c7; /* 밝은 핫핑크 */
    --color-ternary: #ff99da;   /* 포인트 색상 */
    --color-focus: #ffffff;     /* 포커스 outline */

    /* 폰트 */
    --font-primary: "Poppins Variable", sans-serif;
    --font-secondary: "Poppins Variable", sans-serif;
    --font-code: monospace;

    --size-sidenav-width: 300px;
    font-size: 18px; /* 기본 글씨 크기 */
  }

  body {
    font-family: var(--font-primary);
    background-color: var(--color-bg);
    color: var(--color-text);
    line-height: 1.6;
  }

  /* 링크 */
  a {
    color: var(--color-primary);
    text-decoration: none;
    position: relative;
    z-index: 1;
    transition: color 0.2s ease, text-shadow 0.2s ease;
  }
  a:hover {
    color: var(--color-secondary);
    text-shadow: 0 0 5px var(--color-secondary);
  }

  /* 제목 */
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: var(--font-secondary);
    font-weight: 700;
    text-transform: uppercase;
    color: var(--color-primary);
    letter-spacing: 2px;
  }

  /* 코드 블록 */
  code {
    font-family: var(--font-code);
    border: 1px solid var(--color-secondary);
    padding: 0.25em 0.4em;
    border-radius: 0.25em;
    background-color: #111;
    color: var(--color-secondary);
  }

  *:focus-visible {
    outline: 3px solid var(--color-focus);
  }

  /* 공통 텍스트 프레임 */
  .text-frame > * {
    margin-top: 0.5em;
    margin-bottom: 0.5em;
  }

  /* 버튼 */
  .btn {
    display: inline-block;
    padding: 0.6rem 1.2rem;
    border: none;
    border-radius: 30px;
    background-color: var(--color-primary);
    color: #000;
    font-weight: 700;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: transform 0.2s ease, background-color 0.2s ease;
  }
  .btn:hover {
    background-color: var(--color-secondary);
    transform: scale(1.05);
  }

  /* 그리드 레이아웃(과제 모음) */
  .assignments-group {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 20px;
  }

  /* 카드나 프레임 */
  .card, .frame {
    background-color: #111;
    border: 2px solid var(--color-primary);
    border-radius: 16px;
    padding: 1.5rem;
    box-shadow: 0 0 20px rgba(255, 62, 181, 0.3);
  }
</style>
